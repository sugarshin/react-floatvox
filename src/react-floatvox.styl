@charset "utf-8"
@import "nib"

.floatvox-container
  display none
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index 2147483647

.floatvox-background
  position absolute
  width 100%
  height 100%
  background rgba(255, 255, 255, .8)
  z-index 1

.floatvox-content
  position absolute
  top 50%
  left 50%
  z-index 2
  transform translate(-50%, -50%)

.floatvox-emitter
  button
    font bold 13px/20px Helvetica arial nimbussansl liberationsans freesans clean sans-serif
    position relative
    display inline-block
    padding 6px 12px
    color #333
    white-space nowrap
    vertical-align middle
    cursor pointer
    background-color #eee
    background-image linear-gradient(#fcfcfc, #eee)
    background-repeat repeat-x
    border 1px solid #d5d5d5
    border-radius 3px
    user-select none
    appearance none

.floatvox-close
  position absolute
  top 2%
  right 2%
  z-index 2
  button
    font bold 13px/20px Helvetica arial nimbussansl liberationsans freesans clean sans-serif
    position relative
    display inline-block
    padding 6px 12px
    color #333
    white-space nowrap
    vertical-align middle
    cursor pointer
    background-color #eee
    background-image linear-gradient(#fcfcfc, #eee)
    background-repeat repeat-x
    border 1px solid #d5d5d5
    border-radius 3px
    user-select none
    appearance none

.is-display
  display block
